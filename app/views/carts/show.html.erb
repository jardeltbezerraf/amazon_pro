<div class="bg-gray-100 min-h-screen py-8">
  <div class="container mx-auto max-w-5xl px-4">
    <div class="flex flex-col md:flex-row gap-6">
      
      <%# Lado Esquerdo: Lista de Itens %>
      <div class="flex-grow bg-white p-6 shadow-sm rounded">
        <h1 class="text-3xl font-medium mb-4 border-b pb-4 text-gray-900">Carrinho de Compras</h1>
        
        <% if @cart_items.any? %>
          <div class="space-y-6">
            <% @cart_items.each do |item| %>
              <div class="flex flex-col md:flex-row gap-4 border-b pb-6 last:border-0">
                <%# Imagem %>
                <div class="w-full md:w-40 h-40 flex items-center justify-center bg-gray-50 rounded">
                  <% if item[:product].image.attached? %>
                    <%= image_tag item[:product].image, class: "max-h-full max-w-full object-contain" %>
                  <% else %>
                    <span class="text-5xl">ðŸ“¦</span>
                  <% end %>
                </div>

                <%# Info %>
                <div class="flex-grow">
                  <div class="flex justify-between items-start">
                    <h2 class="text-lg font-bold text-[#007185] hover:text-orange-700 hover:underline">
                      <%= link_to item[:product].name, product_path(item[:product]) %>
                    </h2>
                    <span class="text-lg font-bold">R$ <%= number_with_precision(item[:product].price, precision: 2) %></span>
                  </div>
                  <p class="text-green-700 text-sm font-bold">Em estoque</p>
                  
                  <div class="mt-4 flex items-center gap-4">
                    <%# Quantidade %>
                    <div class="flex items-center border rounded-lg bg-gray-50 shadow-sm overflow-hidden border-gray-300">
                      <%# BotÃ£o Diminuir (Remove 1) %>
                      <%= button_to remove_from_cart_path(item[:product]), method: :delete, class: "px-3 py-1 hover:bg-gray-200 transition text-lg font-bold border-r border-gray-300" do %>
                        -
                      <% end %>
                      
                      <span class="px-4 py-1 text-sm font-medium">Qtd: <%= item[:quantity] %></span>
                      
                      <%# BotÃ£o Aumentar (Adiciona 1) %>
                      <%= button_to add_to_cart_path(item[:product]), method: :post, class: "px-3 py-1 hover:bg-gray-200 transition text-lg font-bold border-l border-gray-300" do %>
                        +
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <h2 class="text-2xl font-bold mb-4">Seu carrinho estÃ¡ vazio</h2>
            <%= link_to "Continuar comprando", root_path, class: "text-[#007185] hover:underline" %>
          </div>
        <% end %>
      </div>

      <%# Lado Direito: Finalizar %>
      <% if @cart_items.any? %>
        <div class="w-full md:w-80 bg-white p-6 shadow-sm rounded h-fit">
          <div class="mb-4">
            <%# Mostra a quantidade de produtos diferentes %>
            <span class="text-lg">Subtotal (<%= @cart_items.count %> produtos):</span>
            <span class="text-xl font-bold block">R$ <%= number_with_precision(@total, precision: 2) %></span>
          </div>
          <%= link_to "Fechar pedido", new_checkout_path, class: "w-full bg-[#ffd814] hover:bg-[#f7ca00] py-2 rounded-lg text-center font-medium block shadow-sm border border-[#fcd200]" %>
        </div>
      <% end %>

    </div>
  </div>
</div>