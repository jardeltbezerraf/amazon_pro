<div class="bg-white min-h-screen py-8">
  <div class="container mx-auto px-4 max-w-6xl">
    <div class="flex flex-col md:flex-row gap-10">
      
      <%# Lado Esquerdo: Imagem do Produto %>
      <div class="w-full md:w-1/2 flex justify-center items-center bg-white rounded-xl p-4 h-[400px] md:h-[500px] border border-gray-100 shadow-inner">
        <% if @product.image.attached? %>
          <%= image_tag @product.image, class: "max-h-full max-w-full object-contain" %>
        <% else %>
          <div class="text-center">
            <span class="text-[150px] block mb-4">ðŸ“¦</span>
            <p class="text-gray-400 italic text-sm text-center">Imagem nÃ£o disponÃ­vel</p>
          </div>
        <% end %>
      </div>

      <%# Lado Direito: InformaÃ§Ãµes %>
      <div class="w-full md:w-1/2 flex flex-col">
        <nav class="text-xs text-[#007185] mb-4 flex items-center gap-1">
          <%= link_to "â€¹ Voltar para a vitrine", root_path, class: "hover:underline hover:text-orange-700 font-bold" %>
        </nav>
        
        <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @product.name %></h1>
        <p class="text-sm text-[#007185] hover:underline cursor-pointer mb-4">Visite a loja oficial Amazon Pro</p>

        <div class="border-t border-b py-4 mb-6">
          <div class="flex items-baseline gap-1 text-red-700">
            <span class="text-sm font-medium">R$</span>
            <span class="text-3xl font-bold"><%= number_with_precision(@product.price, precision: 2) %></span>
          </div>
          <p class="text-xs text-gray-500 mt-1">Disponibilidade imediata</p>
        </div>

        <div class="mb-8 text-gray-700">
          <h3 class="font-bold text-lg mb-2 text-gray-800">Sobre este item:</h3>
          <p class="leading-relaxed"><%= @product.description %></p>
        </div>

        <%# Card de Compra %>
        <div class="border rounded-xl p-6 w-full max-w-sm shadow-sm bg-gray-50 border-gray-300">
          <p class="text-green-700 font-bold mb-4">Em estoque</p>

          <div class="space-y-3">
            <%= button_to "Adicionar ao carrinho", add_to_cart_path(@product), method: :post,
                class: "w-full bg-[#ffd814] hover:bg-[#f7ca00] py-2.5 rounded-full text-sm font-medium border border-[#fcd200] cursor-pointer shadow-sm transition-all" %>
            
            <%= link_to "Comprar agora", new_checkout_path(product_id: @product.id),
                class: "w-full bg-[#ffa41c] hover:bg-[#fa8900] py-2.5 rounded-full text-sm font-medium border border-[#ee9105] cursor-pointer text-center block shadow-sm transition-all" %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
