<div class="min-h-screen bg-gray-100 flex flex-col items-center pt-10 px-4">
  <%# Logo %>
  <div class="mb-6">
    <%= link_to root_path, class: "text-3xl font-bold italic text-black" do %>
      amazon<span class="text-orange-400">pro</span>
    <% end %>
  </div>

  <div class="max-w-md w-full bg-white p-8 border border-gray-300 rounded-lg shadow-sm">
    <h2 class="text-2xl font-medium mb-5">Fazer login</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <%# Exibição de alertas (ex: Email ou senha inválidos) %>
      <% if flash[:alert] %>
        <div class="mb-4 p-3 border-l-4 border-red-600 bg-red-50 text-red-800 text-sm flex items-start gap-2">
          <span class="font-bold text-lg">!</span>
          <p><%= flash[:alert] %></p>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :email, "E-mail ou número de telefone celular", class: "block text-sm font-bold mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
            class: "w-full border border-gray-400 px-3 py-2 rounded focus:border-orange-500 focus:shadow-[0_0_3px_2px_rgba(228,121,17,0.5)] outline-none transition-all shadow-inner" %>
      </div>

      <div class="mb-4">
        <div class="flex justify-between items-center mb-1">
          <%= f.label :password, "Senha", class: "text-sm font-bold" %>
          <%- if devise_mapping.recoverable? %>
            <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "text-xs text-blue-700 hover:text-orange-700 hover:underline" %>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "current-password", 
            class: "w-full border border-gray-400 px-3 py-2 rounded focus:border-orange-500 focus:shadow-[0_0_3px_2px_rgba(228,121,17,0.5)] outline-none transition-all shadow-inner" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-6 flex items-center gap-2">
          <%= f.check_box :remember_me, class: "w-4 h-4 rounded border-gray-300 text-orange-500 focus:ring-orange-500" %>
          <%= f.label :remember_me, "Mantenha-me conectado", class: "text-sm text-gray-700" %>
        </div>
      <% end %>

      <%= f.submit "Fazer login", 
          class: "w-full bg-[#f0c14b] hover:bg-[#edb021] border border-[#a88734] py-2 rounded shadow-sm cursor-pointer font-medium text-sm mb-4" %>
    <% end %>

    <div class="text-xs text-gray-700 leading-tight mb-6">
      Ao continuar, você concorda com as <span class="text-blue-700 hover:underline cursor-pointer">Condições de Uso</span> da Amazon Pro.
    </div>
  </div>

  <%# Seção para quem não tem conta %>
  <div class="max-w-md w-full mt-6">
    <div class="relative flex py-3 items-center">
      <div class="flex-grow border-t border-gray-300"></div>
      <span class="flex-shrink mx-4 text-xs text-gray-500">Novo na Amazon Pro?</span>
      <div class="flex-grow border-t border-gray-300"></div>
    </div>
    
    <%= link_to "Criar sua conta da Amazon Pro", new_registration_path(resource_name), 
        class: "w-full mt-2 bg-gray-100 hover:bg-gray-200 border border-gray-400 py-1.5 rounded shadow-sm text-center block text-sm font-medium transition-colors" %>
  </div>
</div>
